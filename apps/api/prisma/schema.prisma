generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// SOURCE MODEL - RSS Feed Sources
// ============================================
model Source {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  websiteUrl  String
  rssFeedUrl  String   @unique
  logoUrl     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationships
  articles    Article[]        // one to many
  categories SourceCategory[]  // Many-to-many with Category
}

// ============================================
// CATEGORY MODEL - Article Categories
// ============================================
model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relationships
  articles  Article[]
  sources   SourceCategory[]  // Many-to-many with Source
}

// ============================================
// SOURCE-CATEGORY JUNCTION TABLE
// ============================================
model SourceCategory {
  id         String   @id @default(cuid())
  sourceId   String
  categoryId String
  createdAt  DateTime @default(now())
  
  source     Source   @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@unique([sourceId, categoryId])  // Prevent duplicate source-category pairs
}

// ============================================
// ARTICLE MODEL - News Articles from RSS
// ============================================
model Article {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String
  excerpt         String?
  originalUrl     String   @unique
  rssPublishedAt DateTime
  fetchedAt       DateTime @default(now())
  isNewsflash     Boolean  @default(false)
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  sourceId        String
  source          Source   @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])
}