generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String   @id @default(cuid())  // Primary key, auto-generated unique ID, cuid - A function that generates a unique string like ckz.... Itâ€™s safe for distributed systems and avoids collisions.
  title       String                          // Article title (required)
  slug        String   @unique                // URL-friendly version of title (unique, required)
  content     String                          // Article content (required)
  publishedAt DateTime?                       // When published (optional - ? means can be null)
  createdAt   DateTime @default(now())       // Auto-set when created
  updatedAt   DateTime @updatedAt            // Auto-updated when changed
}